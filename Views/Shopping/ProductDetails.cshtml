@model IEnumerable<ProductDetails>
@{
    Layout = "~/Views/Shared/_LayoutShopping.cshtml";

}

<div class="container mt-5 mb-5">
    <div class="row d-flex justify-content-center">
        @foreach (var item in Model)
        {
         <div class="col-md-10">
             <div class="card">
                 <div class="row">
                        <div class="col-md-6">
                           <div class="images p-3">
                               <div class="text-center p-4">
                                   <img id="main-image" src="~/assets/images/@item.Image" width="250" />
                               </div>
                           </div>
                        </div>
                  </div>
                   <div>
                      <div class="col-md-6">
                        <div class="product p-4">
                          <div class="d-flex justify-content-between align-items-center">
                             <div class="d-flex align-items-center"> <i class="fa fa-long-arrow-left"></i> 
                                 <a asp-action="Index"><span class="ml-1">Back</span></a> 
                             </div> 
                                <i class="fa fa-shopping-cart text-muted"></i>
                          </div>
                           <div class="mt-4 mb-3">
                                <h4 class="text-uppercase">@item.Description</h4>
                                 <h6 class="text-uppercase">@item.Model</h6>
                           <div class="price d-flex flex-row align-items-center">
                                 <span class="act-price">@item.Price</span>
                           </div>
                           </div>
                               <a asp-action="CheckOut" asp-route-id="@item.ProductId" class="btn btn-danger text-uppercase mr-2 px-4">Add to cart</a> 
                        </div>
                     </div>
                    </div>
             </div>
         </div>
        }

    </div>
</div>